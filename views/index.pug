extends layout.pug
block links
    li.nav-item.active
        a.nav-link.active(href="/") Home
    li.nav-item
        a.nav-link(href="/") New Contact
    li.nav-item
        a.nav-link(href="/") Delete Contact

block content
    if contacts && contacts.length > 0
        ul.row.justify-content-center.list-group-horizontal
            each contact in contacts
                .col-md-4
                    li.d-flex.justify-content-between.align-items-center.list-group-item.bg-light.mb-2
                        a(href="#")=contact.name
                        span.badge.badge-primary=contact.contacts.length